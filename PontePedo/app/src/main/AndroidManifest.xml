<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iteso.giovanni.pontepedo" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ActivityMain"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityPlay"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_activity_play" >
        </activity>
        <activity
            android:name=".ActivityGameList"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_activity_games" >
        </activity>
        <activity
            android:name=".ActivityGameDetail"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_activity_detail" >
        </activity>
        <activity
            android:name=".ActivityCreateGame"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_activity_change_game" >
        </activity>
        <activity
            android:name=".ActivityRoulette"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_activity_roulette" >
        </activity>
        <activity
            android:name=".ActivityEditGameList"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_activity_edit_game_list" >
        </activity>
    </application>

</manifest>
