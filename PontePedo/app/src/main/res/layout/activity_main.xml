<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ActivityMain">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_title_height"
        android:src="@drawable/title_logo"
        android:layout_centerHorizontal="true"
        android:id="@+id/menu_title"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <ImageView
        android:layout_width="@dimen/main_logo_width"
        android:layout_height="@dimen/main_logo_height"
        android:id="@+id/menu_image"
        android:layout_below="@id/menu_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/main_logo_marginTop"
        android:src="@drawable/logo"/>

    <ImageButton
        android:layout_width="@dimen/main_facebookButton_width"
        android:layout_height="@dimen/main_facebookButton_height"
        android:src="@drawable/fb_logo"
        android:background="@color/blueFacebook"
        android:id="@+id/menu_button_facebook"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_button_games"
        android:id="@+id/menu_button_games"
        android:layout_above="@id/menu_button_facebook"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/main_buttonGames_marginBottom" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_button_play"
        android:id="@+id/menu_button_play"
        android:layout_above="@id/menu_button_games"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin" />


</RelativeLayout>
