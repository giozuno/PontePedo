<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.iteso.giovanni.pontepedo.ActivityCreateGame">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_title"
        android:id="@+id/change_title"
        android:textSize="@dimen/title_activity_textSize"
        android:textColor="@color/black"
        android:gravity="bottom|center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_text_title"
        android:layout_below="@+id/change_title"
        android:layout_centerHorizontal="true"
        android:hint="@string/change_title_hint"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continuar"
        android:id="@+id/change_button_confirm"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_text_description"
        android:layout_below="@+id/change_text_title"
        android:layout_centerHorizontal="true"
        android:hint="@string/change_description_hint"
        android:gravity="start"/>




</RelativeLayout>
